{
  "name": "<%= appNameSlug %>",
  "description": "<%= appDescription %>",
  "private": true,
  "version": "<%= appVersion %>",
  "author": {
    "name": "<%= authorName %>",
    "email": "<%= authorEmail %>"
  },
  "repository": {
    "type": "git",
    "url": "<%= appRepo %>"
  },
  "bugs": {
    "url": "https://github.com/<%= userName %>/<%= appNameSlug %>/issues"
  },
  "scripts": {
    "test": "xvfb-run wct test --skip-plugin sauce",
    "start": "gulp",
    "serve": "firebase serve",
    "serve-c9": "firebase serve -p $PORT -o $IP",
    "build": "export NODE_ENV=production && gulp build"
  },
  "dependencies": {
    "path-to-regexp": "^1.7.0",
    "redux": "^3.7.2"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.6.0",
    "browserify": "^14.4.0",
    "camelcase": "^4.1.0",
    "css-slam": "^1.2.1",
    "del": "^3.0.0",
    "eslint-plugin-html": "^3.0.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-babel": "^6.1.2",
    "gulp-hb": "^6.0.2",
    "gulp-html-minifier": "^0.1.8",
    "gulp-if": "^2.0.2",
    "gulp-rename": "^1.2.2",
    "gulp-uglify": "^3.0.0",
    "html-brunch-static": "^1.3.2",
    "inquirer": "^3.2.1",
    "lodash": "^4.17.4",
    "loose-envify": "^1.3.1",
    "merge-stream": "^1.0.1",
    "node-sass": "^4.5.3",
    "parse5": "^3.0.2",
    "parse5-utils": "^2.0.0",
    "polymer-build": "^1.6.0",
    "polymer-bundler": "^3.0.1",
    "sass-brunch": "^2.10.4",
    "slugify": "^1.1.0",
    "standard": "^10.0.2",
    "through2": "^2.0.3",
    "uppercamelcase": "^3.0.0",
    "workbox-build": "^1.2.0",
    "workbox-routing": "^1.1.0",
    "workbox-sw": "^1.1.0",
    "web-component-tester": "^6.0.0"
  },
  "standard": {
    "globals": [
      "$",
      "jQuery",
      "fetch",
      "Polymer",
      "CustomEvent",
      "ga",
      "performance"
    ],
    "ignore": [
      "node_modules",
      "bower_components",
      "node_modules/**",
      "bower_components/**",
      "node_modules\\**",
      "bower_components\\**",
      "test/**",
      "test\\**",
      "**/node_modules/**",
      "**/bower_components/**",
      "**\\bower_components\\**",
      "**\\node_modules\\**",
      "**\\test\\**",
      "**/test/**",
      "node_modules/**",
      "bower_components/**",
      "src/test/**"
    ],
    "plugins": [
      "html"
    ],
    "parser": "babel-eslint",
    "validate": [
      "javascript",
      "html"
    ]
  }
}
